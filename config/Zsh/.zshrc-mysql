function _my_run_launchctl() {

    local stop=false
    local start=false
    OPTIND=1
    while getopts st opt
    do
        case "$opt" in
            "s") start=true
                 ;;
            "t") stop=true
                 ;;
        esac
    done
    shift $(expr $OPTIND - 1)

    local action="load"
    if [[ $stop = true ]]; then
        action="unload"
    fi

    local command="sudo launchctl $action -F /Library/LaunchDaemons/com.oracle.oss.mysql.mysqld.plist"
    echo "$command"

    eval "$command"

}

